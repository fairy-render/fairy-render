{
	"name": "@fairy-render/solid",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"build": "tsup",
		"watch": "tsup --watch"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs",
			"types": "./dist/index.d.ts"
		},
		"./client": {
			"import": "./dist/client.js",
			"require": "./dist/client.cjs",
			"types": "./dist/client.d.ts"
		}
	},
	"devDependencies": {
		"@types/node": "^20.8.6",
		"tsup": "^8.1.0",
		"typescript": "^5.2.2",
		"solid-js": "^1.8.17"
	},

	"peerDependencies": {
		"solid-js": "^1.8.17"
	}
}
